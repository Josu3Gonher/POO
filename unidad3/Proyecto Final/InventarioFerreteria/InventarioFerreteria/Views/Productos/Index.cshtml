@model IEnumerable<ObtenerProductos>

@{
    ViewData["Title"] = "Productos disponibles";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    
    <a asp-action="Crear" class="btn btn-dark"> <i class="bi bi-cart3"></i> Ingresar Producto</a>
</div>

<table class="table table-hover tablas">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Descripción</th>
            <th>Proveedor</th>
            <th>Categoria</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productos in Model)
        {
            <tr>
                <td>@productos.Nombre</td>
                <td>@productos.Precio</td>
                <td>@productos.Marca</td>
                <td>@productos.Descripcion</td>
                <td>@productos.ProveedorNombre</td>
                <td>@productos.CategoriaNombre</td>
              
                <td>
                    <input type="hidden" asp-for="@productos.ProductoId" />
                    <a asp-action="Editar" asp-route-ProductoId="@productos.ProductoId" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

