@model IEnumerable<Compra>

@{
    ViewData["Title"] = "Listado de compras";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    <a asp-action="Crear" class="btn btn-dark"><i class="bi bi-cart4"></i> Nueva Compra</a>
</div>

<table class="table tablas">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Fecha</th>
            <th>Descripcion</th>
            <th>Cantidad</th>
            <th>Proveedor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compra in Model)
        {
            <tr>
                <th>@compra.ProductoNombre</th>
                <td>@compra.Fecha</td>
                <td>@compra.Descripcion</td>
                <td>@compra.Cantidad</td>
                <th>@compra.ProveedorNombre</th>
            </tr>
        }
    </tbody>
</table>