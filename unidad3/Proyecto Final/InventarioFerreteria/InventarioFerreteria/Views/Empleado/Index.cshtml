@model IEnumerable<Empleado>

@{
    ViewData["Title"] = "Listado de empleados de la ferreteria";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    <a asp-action="Crear" class="btn btn-dark"><i class="bi bi-person-fill"></i> Nuevo Empleado</a>
</div>

<table class="table table-hover tablas">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Codigo</th>
            <th>Cargo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.Nombre</td>
                <td>@empleado.CodigoEmpleado</td>
                <th>@empleado.Cargo</th>
                <td>
                    <input type="hidden" asp-for="@empleado.EmpleadoId" />
                    <a asp-action="Borrar" asp-route-empleadoId="@empleado.EmpleadoId" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>