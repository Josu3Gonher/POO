@model Empleado

@{
    ViewData["Title"] = "Borrar Empleado";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Esta seguro de borrar el empleado @Model.Nombre?</h3>

<form asp-action="BorrarEmpleado">
    <input asp-for="EmpleadoId" type="hidden" />
    <button class="btn btn-danger" type="submit">Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</form>