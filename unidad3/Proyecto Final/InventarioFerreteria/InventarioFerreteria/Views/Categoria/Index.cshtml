@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Listado de categorias";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    <a asp-action="Crear" class="btn btn-dark"><i class="bi bi-tags"></i> Nueva Categoria</a>
</div>

<table class="table table-hover tablas">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Nombre</td>
                <td>@categoria.Descripcion</td>
                <td>
                    <input type="hidden" asp-for="@categoria.CategoriaId" class="ids" />
                    <a asp-action="Editar" asp-route-CategoriaId="@categoria.CategoriaId" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    @*<a asp-action="Borrar" asp-route-CategoriaId="@categoria.CategoriaId" class="btn btn-danger">Borrar</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>