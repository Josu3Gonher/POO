@model IEnumerable<Proveedor>

@{
    ViewData["Title"] = "Listado de proveedores";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    <a asp-action="Crear" class="btn btn-dark"><i class="bi bi-shop"></i> Nuevo Proveedor</a>
</div>

<table class="table table-hover table-sm tablas">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proveedor in Model)
        {
            <tr>
                <td>@proveedor.Nombre</td>
                <td>@proveedor.Telefono</td>
                <td>
                    <input type="hidden" asp-for="@proveedor.ProveedorId" class="ids" />
                    <a asp-action="Editar" asp-route-ProveedorId="@proveedor.ProveedorId" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    @*<a asp-action="Borrar" asp-route-ProveedorId="@proveedor.ProveedorId" class="btn btn-danger">Borrar</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>