@model Proveedor
@{
    ViewData["Title"] = "Editar proveedor";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Proveedor" asp-action="Editar" class="form-edit">
    <input asp-for="ProveedorId" type="hidden" />

    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
