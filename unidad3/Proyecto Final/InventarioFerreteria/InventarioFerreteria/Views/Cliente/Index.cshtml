@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Listado de clientes";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 mt-3">
    <a asp-action="Crear" class="btn btn-dark"><i class="bi bi-person-fill"></i> Nuevo Cliente</a>
</div>

<table class="table table-hover tablas">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>DNI</th>
            <th>Telefono</th>
            @*<th>Acciones</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Direccion</td>
                <th>@cliente.Dni</th>
                <th>@cliente.Telefono</th>
                @*<td>
                    <input type="hidden" asp-for="@cliente.ClienteId" />
                    <a asp-action="Borrar" asp-route-clienteId="@cliente.ClienteId" class="btn btn-primary">Borrar</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>