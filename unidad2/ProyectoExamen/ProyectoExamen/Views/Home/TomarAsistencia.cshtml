@model HomeViewController

@{
    ViewData["Title"] = "Control de Asistencia";
}

<h1 class="titulo-custom">Control de Asistencia</h1>

<table class="table tabla-custom">
    <thead class="cabeza-tabla">
        <tr>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Asistencia</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody class="tabla-cuerpo">
        @foreach (var alumno in Model.Alumnos)
        {
            <tr>
                <td>@Html.DisplayFor(modelAlumno => alumno.Nombre)</td>
                <td>@Html.DisplayFor(modelAlumno => alumno.Apellido)</td>
                <td>
                    <input type="checkbox" checked="@alumno.Asistencia" disabled="disabled" class="form-check-input" />
                </td>
                <td>
                    <a href="@Url.Action("Editar", "Home", new{id=alumno.Id})" class="btn btn-primary btn-modificado">
                        Editar
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>