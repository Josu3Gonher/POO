@model IEnumerable<TareaAplicacionWeb.Models.Tarea>

<h4>Tareas recientes</h4>

@if (Model.Count() == 0)
{
    <p>No se han creado tareas.</p>
}
else
{
    <ul>
        @foreach (var tarea in Model)
        {
            <li>@Html.ActionLink(tarea.Titulo, "Detalles", new { id = tarea.Id })</li>
        }
    </ul>
}